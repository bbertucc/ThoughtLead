<% @current_tab = :'Login' %>
<div id="main_content">
	<div class="title bar">
		<h2>Log In</h2>
	</div>
	<div class="columns login">
		<div class="column one">
			<% form_tag sessions_path do %>
				<fieldset class="input">

					<div class="inp group">
					    <%= label :user, :login %>
					    <%= text_field_tag 'login', params[:login], :class => 'inp_text' %>
					</div>
				
					<div class="inp group">
						<%= link_to "Forgot Password?", forgot_password_url, :class => "forgot_password" %>
					    <%= label :user, :password %>
					    <%= password_field_tag 'password', params[:password], :class => 'inp_text' %>
					</div>

					<div class="checkbox group">
				        <label class="checkbox">
							<%= check_box_tag 'remember_me', "1", params[:remember_me] %> 
							Remember me on this computer
						</label>
					</div>

				</fieldset>
				<fieldset class="submit">
					<%= submit_tag 'Log in' %>
				</fieldset>
		    <% end -%>
		</div>
		<div class="column two">
			<div class="module signup">
				<h4>Donâ€™t have an account yet?</h4>
				<p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit.</p>
				<p class="signup replace"><%= link_to "Sign up today", signup_url %></p>
			</div>
		</div>
	</div>
	
</div>