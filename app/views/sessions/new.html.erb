<div id="primary">
  <h1><%= @page_title = "Login" %></h1>

  <% form_tag sessions_path do | f | %>
    <%= label :user, :login %>
    <%= text_field_tag 'login', params[:login] %>

  
  
    <%= label :user, :password %>
  	<%= password_field_tag 'password', params[:password] %>

  
  
  	<%= check_box_tag 'remember_me', "1", params[:remember_me] %> Remember me on this computer
  
  
  
  	<%= submit_tag 'Log in' %>
  <% end -%>


  <%= link_to "Signup", signup_url %>
</div>
