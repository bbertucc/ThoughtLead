<% @current_tab = :People %>
<div id="main_content">
	<div class="content_bar" id="top">
		<div class="breadcrumbs">
			<p>Jump to:</p>
			<ul>
				<li class="first"><%= link_to "People", users_path %></li>
				<li><%= link_to "Your Profile", current_user %></li>
			</ul>
		</div>
	</div>
	<h2><%= @page_title = "Forgot your password?" %></h2>

    <% form_for(:user, :url => forgot_password_url) do |f| %>
		<%= f.error_messages %>
		<fieldset class="input thin">

			<div class="inp group">
			    <%= label :user, :login %>
			    <%= text_field_tag 'login', params[:login], :class => 'inp_text' %>
			</div>

		</fieldset>
		<fieldset class="submit">
			<%= submit_tag "Send Password" %>
		</fieldset>
	<% end %>
</div>
