<div id="primary">
  <h1><%= @page_title = "Signup" %></h1>

  <% form_for :user, @user, :url => signup_url do | f | -%>
    <%= f.error_messages %>
    
    <p>
      <%= f.label :"Select a Username" %>
      <%= f.text_field :login, :class => 'text single' %>
    </p>

    <p>
      <%= f.label :"Your Email Address" %>
      <%= f.text_field :email, :class => 'text single' %>
    </p>

    <p>
      <%= f.label :"Choose a Password" %>
      <%= f.password_field :password, :class => 'text single' %>
    </p>
  
    <p>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :class => 'text single' %>
    </p>
	
    <p>
      <%= f.label :"Why are you interested in joining this community?" %>
      <%= f.text_area :reason, :class => 'text medium' %>
    </p>
	
	<p>
		By signing up you agree to the <a href="/terms.html">terms of use</a> for this site.
    <p>
  	  <%= submit_tag 'Sign Up!' %>
    </p>
  <% end -%>
</div>