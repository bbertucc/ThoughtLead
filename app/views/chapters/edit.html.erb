<% @current_tab = :Courses %>
<div id="main_content">
	<div class="content_bar" id="top">
		<div class="breadcrumbs">
			<p>Jump to:</p>
			<ul>
				<li class="first"><%= link_to "Courses", courses_path %></li>
				<li><%= link_to h(snippet(@course.to_s)), @course %></li>
			</ul>
		</div>
		<% if logged_in_as_owner? %>
		<div class="action">
			<span class="button_left">&nbsp;</span><a href="<%= new_course_url %>" class="button"><span class="icon create">+</span><span class="text">Create a Course</span></a>
		</div>
	    <% end %>
	</div>

	<div class="add_sep_item">
		<h2>Edit chapter</h2>
		<% form_for(@chapter, :html => {:class => 'edit'}) do | f | %>
			<%= f.error_messages %>

			<fieldset class="input">

				<div class="checkbox group">
					<%= f.check_box :draft %>
					<%= f.label :draft, 'Draft?' %>
				</div>

				<div class="inp group">
					<%= f.text_field :name, :class => "inp_text"  %>
				</div>

			</fieldset>
			<fieldset class="submit">
				<ul class="submit_opts">
					<li><%= submit_tag "Save Changes", :class => "make_button", :id => "save" %></li>
					<li class="text">or <%= link_to "Cancel", course_chapters_url(@course) %></li>
				</ul>
			</fieldset>
		<% end %>
	</div>
</div>