<% @current_tab = :Courses %>

<div id="primary">
  <p><%= link_to "&#8592; Return to Course Overview", @course %></p>
  <h1 class="grouped"><%=h "Edit chapters for #{@course}" %></h1>
  <br />
  <% for chapter in @course.chapters %>
    <div class="chapter">
      <%=h chapter %> [ <%= link_to "Delete", course_chapter_url(@course, chapter), :method => :delete, :confirm => "Are you sure you would like to delete this chapter?  It's lessons will also be deleted." %>
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <%= link_to "Rename", edit_course_chapter_url(@course, chapter) %>]
    </div>
  
  <% end %>
  
  <div class="add_chapter">
    Add a New Chapter

    <% form_for [@course, Chapter.new] do | f | %>
      <%= f.error_messages %>

      <%= f.text_field :name, :class => "text single"  %>
      
      <%= submit_tag "Add" %>
    <% end %>
  </div>
</div>

