Course: <%= @course %>

<%= error_messages_for :article %>

<% form_for [@course, @article] do | f | %>
  <%= f.label(:title) %>
  <br />
  <%= f.text_field :title %>
  
  <br /><br />
  
  <%= f.label(:body) %>
  <br />
  <%= f.text_area(:body) %>
  
  <br /><br />
  <%= submit_tag "Save" %> or <%= link_to "Cancel", @course %>
  
<% end %>