<div id="main_content">
	<div class="content_bar" id="top">
		<div class="breadcrumbs">
			<ul>
				<li class="first"><%= link_to "People", users_path %></li>
			</ul>
		</div>
	</div>
	<div class="title">
		<h2>Report Page</h2>
		<p class="subtitle">Download CSV files for users</p>
	</div>
	<div id="export_users" class="export_users">
		<% form_tag :controller=>'report', :action=>'export_users' do %>
			<label>Users joining since date: <%= unobtrusive_date_picker_tags %></label><br />
			<p>
				<%= radio_button_tag 'premium', 'true' %> <%= label_tag 'premium_true', 'Premium Users', :style => 'display:inline' %>
			<br/>
				<%= radio_button_tag 'premium', 'false' %> <%= label_tag 'premium_false', 'Registered Users', :style => 'display:inline' %>
			</p>
			<%= submit_tag("Export user list") %>
  		<% end %>
	</div>
</div>
