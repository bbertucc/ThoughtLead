<% lessons.each do |lesson| -%>
  <li>
	  Lesson: <%= link_to_lesson lesson %>
		<em>in course:</em> <%= link_to lesson.chapter.course.title, :controller=>:courses, :action=>:show, :id=>lesson.chapter.course.id %> <br/>
	  Lesson Body: <%= lesson.body %> <br/>
	  <%= course_chapter_lesson_url(lesson.chapter.course, lesson.chapter, lesson)%>
  </li>
<% end %>