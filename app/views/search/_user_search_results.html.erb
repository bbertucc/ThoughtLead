<h3>User Profiles:&nbsp;<%= pluralize(@users.size, 'Result') %>&nbsp;found</h3>
<ul>
    <% if logged_in? %>
    <% @users.each do |user| %>
    <li>
        Name: <%= link_to h(user), user %>
        <br/>
        About: <%= h(user.about) -%>
        <br/>
        Interests: <%= h(user.interests) -%>
        <br/>
        Location: <%= h(user.location) -%>
        <br/>
        Zip Code: <%= h(user.zipcode) -%>
        <br/>
        <%= user_url(user) %>
    </li>
    <% end # @user.each -%>
    <% else %>
    <li>
        You must&nbsp;<%= link_to "log in", login_url %>&nbsp;to view the contents of user profiles.
    </li>
    <% end %>
</ul>
