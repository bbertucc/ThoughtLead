<h3>User Profiles:&nbsp;<%= pluralize(@users.size, 'result') %>&nbsp;found</h3>
<ul class="content">
	<% if logged_in? %>
		<% @users.each do |user| %>
			<li>
				<dl class="profile_result clear">
					<dt>Name:</dt>
					<dd><%= link_to h(user), user %></dd>
					<dt>About:</dt>
					<dd><%= h(user.about) -%></dd>
					<dt>Interests:</dt>
					<dd><%= h(user.interests) -%></dd>
					<dt>Location:</dt>
					<dd><%= h(user.location) -%></dd>
					<dt>Zip Code:</dt>
					<dd><%= h(user.zipcode) -%></dd>
					<dt>URL:</dt>
					<dd class="url"><%= user_url(user) %></dd>
				</dl>
			</li>
		<% end # @user.each -%>
	<% else %>
		<li>
		You must&nbsp;<%= link_to "log in", login_url %>&nbsp;to view the contents of user profiles.
		</li>
	<% end %>
</ul>
