<h3>User Profiles:&nbsp;<%= pluralize(@users.size, 'Result') %>&nbsp;found</h3>
<ul>
    <% if logged_in? %>
    <% @users.each do |user| %>
    <li>
        Name: <%= link_to user.display_name, user %>
        <br/>
        About: <%= user.about -%>
        <br/>
        Interests: <%= user.interests -%>
        <br/>
        Location: <%= user.location -%>
        <br/>
        Zip Code: <%= user.zipcode -%>
        <br/>
        <%= user_url(user) %>
    </li>
    <% end # @user.each -%>
    <% else %>
    <li>
        You must&nbsp;<%= link_to "log in", login_url %>&nbsp;to view the contents of user profiles.
    </li>
    <% end %>
</ul>
