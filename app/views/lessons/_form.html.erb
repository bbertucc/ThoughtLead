Course: <%= @course %>

Chapter: <%= @chapter %>


<% form_for [@course, @chapter, @lesson] do | f | %>
  <%= f.error_messages %>
  
  <%= f.label(:title) %>
  
  <%= f.text_field :title %>

  
  
  <%= f.label(:teaser) %>
  
  <%= f.text_area(:teaser, :rows => 4) %>
  
  
  
  <%= f.label(:body) %>
  
  <%= f.text_area(:body, :rows => 18) %>
  
  
  <%= f.check_box :draft %>
  <%= f.label 'Draft?' %>

  
  <%= f.check_box :premium %>
  <%= f.label 'Only paid subscribers can access this lesson' %>
  
  
  <%= submit_tag "Save" %> or <%= link_to "Cancel", @course %>
  
<% end %>