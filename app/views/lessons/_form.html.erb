<% obj = mode == :new ? [@chapter, @lesson] : @lesson %>
<% form_for obj, :html => { :multipart => true, :class => "edit" } do | l | %>
	<%= render :partial => '/contents/edit_content', :locals => { :content => @lesson.content } %>

	<fieldset class="submit">
		<ul class="submit_opts">
			<% if mode == :new %>
				<li><%= submit_tag "Create Lesson", :class => "make_button", :id => "create" %></li>
			<% else %>
				<li><%= submit_tag "Save Changes", :class => "make_button", :id => "save" %></li>
			<% end %>
			<li class="text">or <%= link_to "Cancel", @course %></li>
		</ul>
	</fieldset>
<% end %>