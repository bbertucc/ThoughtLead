<% @current_tab = :'Community Setup' %>
<div id="main_content">
	<div class="content_bar" id="top">
		<div class="breadcrumbs">
			<p>Jump to:</p>
			<ul>
				<li class="first no_tab"><%= link_to "Community Setup", edit_community_url %></li>
			</ul>
		</div>
	</div>

	<h2>Access Levels</h2>

	<ul class="sep_item_list categories">
		<% for access_class in @community.access_classes %>
		<li>
			<h3><%=h access_class.name %>
			<% unless access_class.children.blank? %> (includes access to<% end %> <%= access_class.children.map(&:name).join(", ") %><% unless access_class.children.blank? %>)<% end %></h3>
			<ul class="item_actions">
				<li><%= link_to "Edit Subscription Plan", access_class_subscription_plans_url(access_class) %></li>
			</ul>
		</li>
		<% end %>
	</ul>

	<br />
	<h3 class="separator">Create a New Access Level</h3>
	<% form_tag :action => "create_access_level" do %>

	<fieldset class="input">

		<div class="inp group">
			<%= label_tag :name, "Name" %>
			<%= text_field_tag :name, '', :class => "inp_text" %>
		</div>

    <p>Also grant members with this access level access to content tagged:</p>

		<ul class="checkbox group">
	  <%= hidden_field_tag "children[]", "" %>
		<% current_community.access_classes.each do |access_class|%>
		<li>
		  <%= check_box_tag "children[]", access_class.id, false, :class => "child" %>
			<%= label_tag "children[]", access_class.name %>
		</li>
		<% end %>
	</ul>

	</fieldset>

	<fieldset class="submit">
		<ul class="submit_opts">
			<li><%= submit_tag "Create Access Level", :class => "make_button", :id => "create" %></li>
		</ul>
	</fieldset>

	<% end -%>

</div>
<div id="sidebar">
	<ul class="modules">
		<li class="navigation themes">
			<h3>Community Setup</h3>
			<%= render :partial => "menu", :locals => { :mode => :edit }  %>
		</li>
	</ul>
</div>
