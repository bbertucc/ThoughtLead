<% @current_tab = :'Community Setup' %>
<div id="main_content">
	<div class="content_bar" id="top">
		<div class="breadcrumbs">
			<p>Jump to:</p>
			<ul>
				<li class="first no_tab"><%= link_to "Community Setup", edit_community_url %></li>
			</ul>
		</div>
	</div>
	<h2>Edit Community</h2>
	<% form_for @community, :url => edit_community_url, :html => {:class => 'edit'} do | f | %>
		<%= f.error_messages %>

		<fieldset class="input">
			<div class="inp group">
				<%= f.label :name %>
				<%= f.text_field :name, :class => "inp_text"  %>
			</div>

			<div class="inp group">
				<%= f.label :host %>
				<%= f.text_field :host, :class => "inp_text"  %>
			</div>


			<div class="inp group">
				<%= f.label :spreedly_api_key %>
				<%= f.text_field :spreedly_api_key, :class => "inp_text"  %>
			</div>

			<div class="checkbox group">
				<%= f.check_box :use_spreedly_production_site  %>
				<%= f.label :use_spreedly_production_site, "Use Spreedly Production Site", :class => 'plus_label'  %>
			</div>

			<div class="inp group">
				<%= f.label "Link to purchase premium access" %>
				<span class="hint">(Full URL including http://)</span>
				<%= f.text_field :premium_link, :class => "inp_text"  %>
			</div>

			<div class="inp group">
				<%= f.label "Text for link to purchase premium access" %>
				<span class="hint">(i.e. "Click to purchase premium access for just $19.95 per month")</span>
				<%= f.text_field :premium_text, :class => "inp_text"  %>
			</div>


			<p><%= link_to "Change your payment settings", "https://spreedly.com/thoughtlead-test/subscriber_accounts/#{current_community.spreedly_token}" if current_community.spreedly_token %></p>

		</fieldset>

		<fieldset class="submit">
			<ul class="submit_opts">
				<li><%= submit_tag "Save Changes", :class => "make_button", :id => "save" %></li>
				<li class="text">or <%= link_to "Cancel", community_home_url %></li>
			</ul>
		</fieldset>

	<% end %>
</div>
<div id="sidebar">
	<ul class="modules">
		<li class="navigation themes">
			<h3>Community Setup</h3>
			<%= render :partial => "menu", :locals => { :mode => :edit }  %>
		</li>
	</ul>
</div>