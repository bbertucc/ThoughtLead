
<% form_for @discussion do | f | %>
  <%= f.error_messages %>

  <%= f.label(:title) %>
  
  <%= f.text_field :title, :class => "text single"  %>
  
  
  <%= f.label(:body) %>
  <%= f.text_area(:body, :rows => 18, :class => "text large") %>
  
  <% if !current_community.themes.empty? %>
    <p>
      <%= f.label :theme_id, 'Theme' %>
    	<%= f.select(:theme_id, [[ "General", nil ]] + current_community.themes.map { | each | [ each.name, each.id ] } ) %>
    </p>
  <% end %>
	
  <p>
    <%= submit_tag "Save" %> or <%= link_to "Cancel", discussions_url %>
  </p>
  
<% end %>