
<%= error_messages_for :discussion %>

<% form_for @discussion do | f | %>
  <%= f.label(:title) %>
  <br />
  <%= f.text_field :title %>

  <br /><br />
  
  <%= f.label(:body) %>
  <br />
  <%= f.text_area(:body, :rows => 18) %>
  
  
  <br /><br />
  <%= submit_tag "Save" %> or <%= link_to "Cancel", discussions_url %>
  
<% end %>