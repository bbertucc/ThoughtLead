<div id="primary">
  <h1>Current Discussions</h1>
  <div>
  <%= link_to "Add a Discussion Topic", new_discussion_url %>
  </div>

  <div class="discussions">
    <% for discussion in @discussions %>
      <h2><%= link_to discussion, discussion %></h2>
      <span class="discussion_info">
        by <%= link_to discussion.user, discussion.user %>
  
        <%= discussion.created_at.to_s(:super_short) %>
  
        <%= link_to pluralize(discussion.responses.count, "Response"), discussion %>
      </span>
  
      <%= discussion.body %>
    <% end %>
  </div>
</div>