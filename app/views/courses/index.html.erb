
<div id="primary">
  <h1>Courses</h1>
  <div class="courses">
    <% for course in @courses %>
      <div class="course_title">
        <%= link_to course, course %>
      </div>
      <div class="course_description">
        <%= course.description %>
      </div>
    <% end %>
  </div>

  <div>
    <%= link_to "Add a course", new_course_url %>
  </div>
</div>

