
<% form_for @course do | f | %>
  <%= f.error_messages %>

  <%= f.label(:title) %>
  <br />
  <%= f.text_field :title %>
  
  <br /><br />
  
  <%= f.label(:description) %>
  <br />
  <%= f.text_area(:description) %>
  
  <br /><br />
  <%= submit_tag "Save" %> or <%= link_to "Cancel", courses_url %>
  
<% end %>