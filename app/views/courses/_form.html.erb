
<% form_for @course do | f | %>
  <%= f.error_messages %>

  <%= f.label(:title) %>
  <%= f.text_field :title, :class => "text single" %>
  
  <%= f.label(:description) %>
  <%= f.text_area(:description, :class => "text medium") %>
  <span class="draft plus_label"><%= f.check_box :draft %>
    <%= f.label :draft, 'Draft?' %>
  </span>
  
<% if mode == :new %>
<%= submit_tag "Create" %>or <%= link_to "Cancel", courses_url %>
<% else %>
<%= submit_tag "Save" %>or <%= link_to "Cancel", @course %>
<% end %>
  
<% end %>