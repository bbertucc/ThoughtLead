<% @current_tab = :Courses %>

<div id="primary">
  <p><%= link_to "&#8592; Return to Courses", courses_url %></p>
  <h1 class="grouped"><%=h @course %></h1>
  <span class="meta_info author">by <%= link_to h(@course.user), @course.user %></span>
  <div class="course_description">
    <p><%=h @course.description %></p>
  </div>
  <% for chapter in @course.chapters %>
    <div class="chapter">
      <%=h chapter %>
    </div>
    <ul>
      <% for lesson in chapter.lessons  %>
        <li>
          <h2><%= link_to h(lesson), [@course, chapter, lesson] %></h2>
        
          <p><%= teaser_format(lesson.teaser) %></p>
        </li>
      <% end %>
    </ul>
  
  <div class="add_lesson">
    <%= link_to "+ Add a Lesson", new_course_chapter_lesson_url(@course, chapter), :class => 'action_sm' if logged_in_as_owner? %>
  </div>
  
  <% end %>
  
</div>
<div id="secondary">
  <ul class="actions first">
    <li class="action edit">
      <span><%= link_to "Edit this Course", edit_course_url(@course) if logged_in_as_owner? %></span>
    </li>
    <li class="action edit">
      <span><%= link_to("Edit Chapters", course_chapters_url(@course)) if logged_in_as_owner? %></span>
    </li>
    <li class="action delete">
      <span><%= link_to("Delete this Course", course_url(@course), :method => :delete, :confirm => "Are you sure you would like to delete this course?  This action cannot be undone.") if logged_in_as_owner? %></span>
    </li>
  </ul>  
</div>



