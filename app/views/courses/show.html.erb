<% @current_tab = :learn %>

<div id="primary">
  <h1 class="group"><%= @course %></h1>
  <p class="course_author"><small>by <%= link_to @course.user, @course.user %></small></p>
  <div class="course_description">
    <%= textilize(@course.description) %>
  </div>
  <% for chapter in @course.chapters %>
    <div class="chapter">
      <%= chapter %>
    </div>
    <ul>
      <% for lesson in chapter.lessons  %>
        <li>
          <h2><%= link_to lesson, [@course, chapter, lesson] %></h2>
        
          <p><%= lesson.teaser %></p>
        </li>
      <% end %>
    </ul>
  
  <div class="add_lesson">
    <%= link_to "+ Add a Lesson", new_course_chapter_lesson_url(@course, chapter) %>
  </div>
  
  <% end %>

  <div class="add_chapter">
    Add a New Chapter

    <% form_for [@course, Chapter.new] do | f | %>
      <%= f.error_messages %>

      <%= f.text_field :name %>
  
      <%= submit_tag "Add" %>
    <% end %>
  </div>

  <div class="">
  <%= link_to "Edit this course", edit_course_url(@course) %>&nbsp;|&nbsp;<%= link_to "View All Courses", courses_url %>
</div>


