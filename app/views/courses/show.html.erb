<% @current_tab = :Courses %>
<% @page_class = :courses_index %>
<div id="main_content">
	<div class="content_bar" id="top">
		<div class="breadcrumbs">
			<p>Jump to:</p>
			<ul>
				<li class="first"><%= link_to "Courses", courses_path %></li>
			</ul>
		</div>
		<% if logged_in_as_owner? %>
		<div class="action">
			<span class="button_left">&nbsp;</span><a href="<%= new_course_url %>" class="button"><span class="icon create">+</span><span class="text">Create a Course</span></a>
		</div>
	    <% end %>
	</div>

	<div class="title">
		<h2><%=h @course %></h2>
		<ul class="meta_info clear">
			<li class="date first"><%= @course.created_at.to_s(:day_month_year) %></li>
			<li class="meta_tags">
				<ul>
					<%= course_index_notes(@course) %>
				</ul>
			</li>
		</ul>
	</div>
	<div class="module actions">
		<div class="content">
			<h4>Course Actions</h4>
			<ul class="action_nav">
				<li class="edit"><%= link_to "Edit Course", edit_course_url(@course) if logged_in_as_owner? %></li>
				<li class="edit"><%= link_to("Edit Chapters", course_chapters_url(@course)) if logged_in_as_owner? %></li>
				<li class="delete"><%= link_to("Delete Course", course_url(@course), :method => :delete, :confirm => "Are you sure you would like to delete this course?  This action cannot be undone.") if logged_in_as_owner? %></li>
			</ul>
		</div>
	</div>
	<p><%=h @course.description %></p>
	<ul class="lesson_list">
		<% for chapter in @course.chapters %>
		<% unless chapter.draft && !logged_in_as_owner? %>
		<li>
			<h3>
				<%=h chapter %> 
				<ul class="meta_info">
					<li class="meta_tags">
						<ul>
							<% if chapter.draft %><br/><span style="text-transform:capitalize; color:red">Draft: chapter contents are hidden.</span><% end %>
						</ul>
					</li>
				</ul>
			</h3>
			<ul>
				<% for lesson in chapter.lessons  %>
				<% if lesson.visible_to(current_user) %>
				<li>
					<h4><%= link_to(h(lesson),[@course,chapter,lesson]) %></h4>
					<ul class="meta_info">
						<li class="meta_tags">
							<ul>
								<%= content_notes(lesson.content) %>
							</ul>
						</li>
					</ul>
					<p><%= teaser_format(lesson.content.teaser) %></p>
				</li>
				<% end %>
				<% end %>
			</ul>

			<% if logged_in_as_owner? %>
			<div class="button clear"><a href="<%= url_for(new_course_chapter_lesson_url(@course, chapter)) %>"><span class="icon create">Add a Lesson</span></a></div>
			<% end %>
		</li>
		<% end %>
		<% end %>
	</ul>
</div>
<div id="sidebar">
	<ul class="modules">
		<li class="navigation nav_sep outline">
			<h3><span>Outline: <a href="#">draft course</a></span></h3>
			<ul class="content">
				<li class="active">
					<h4>This chapter has a video</h4>
					<ul>
						<li><a href="#">Lesson with a Video</a></li>
						<li><a href="#">Sample Lesson</a></li>
						<li><a href="#">Lesson with a Video</a></li>
						<li><a href="#">Demo Lesson</a></li>
					</ul>
				</li>
				<li>
					<h4>Another chapter title</h4>
					<ul>
						<li><a href="#">Lesson with a Video</a></li>
						<li><a href="#">Demo Lesson</a></li>
					</ul>
				</li>
				<li>
					<h4>More collapsed stuff</h4>
					<ul>
						<li><a href="#">Lesson with a Video</a></li>
						<li><a href="#">Demo Lesson</a></li>
					</ul>
				</li>
				<li class="last">
					<h4>Lorem ipsum dolor sit amet consectetuer ad.</h4>
					<ul>
						<li><a href="#">Lesson with a Video</a></li>
						<li><a href="#">Demo Lesson</a></li>
					</ul>
				</li>
			</ul>
		</li>
		<%= @themed_courses_sidebar %>
	</ul>
</div>