<div id="primary">
  <h1><%= @page_title = "Create a community" %></h1>

  <%= error_messages_for :user, :community %>
  <% form_for @community do | f | -%>

    <%= f.label :community_name %>
    <%= f.text_field :name %>

  

    <%= label :user, :login %>
    <%= text_field :user, :login %>
  
  

    <%= label :user, :email %>
    <%= text_field :user, :email %>

  
  
    <%= label :user, :password %>
    <%= password_field :user, :password %>

  
  
    <%= label :user, :password_confirmation %>
    <%= password_field :user, :password_confirmation %>
	
	
  
	
    <%= f.label :subdomain %>
    http://<%= f.text_field :subdomain %>.<%= APP_DOMAIN %>
	
	
  	<%= submit_tag 'Sign up' %> or <%= link_to "Cancel", root_url %>
  <% end -%>
</div>
