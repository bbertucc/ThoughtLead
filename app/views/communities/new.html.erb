<div id="primary">
  <h1><%= @page_title = "Create a community" %></h1>

  <%= error_messages_for :user, :community %>
  <% form_for @community do | f | -%>

    <%= f.label :community_name %>
    <%= f.text_field :name, :class => 'text single'  %>

  

    <%= label :user, :login %>
    <%= text_field :user, :login, :class => 'text single'  %>
  
  

    <%= label :user, :email %>
    <%= text_field :user, :email, :class => 'text single'  %>

  
  
    <%= label :user, :password %>
    <%= password_field :user, :password, :class => 'text single'  %>

  
  
    <%= label :user, :password_confirmation %>
    <%= password_field :user, :password_confirmation, :class => 'text single'  %>
	
	
	  <div class="subdomain">
      <%= f.label :host %>
      (Hostname only, without http://)<%= f.text_field :host, :class => 'text single half'  %>
	  </div>
  	
  	<div>
  	  <%= submit_tag 'Sign up' %> or <%= link_to "Cancel", root_url %>
  	</div>
  <% end -%>
</div>
